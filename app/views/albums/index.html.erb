<p id="notice"><%= notice %></p>

<h1>Albums</h1>

<table  class="table table-borderless">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Year</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.name %></td>
        <td><%= album.year %></td>
        <td><%= link_to 'Show', artist_album_path(@artist, album) %></td>
        <td><%= link_to 'Edit', edit_artist_album_path(@artist, album) %></td>
        <td><%= link_to 'Delete', artist_album_path(@artist, album), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
  <%= link_to 'New Album', new_artist_album_path %> |
<% end %>
<%= link_to 'Back to Artists', artists_path %>
