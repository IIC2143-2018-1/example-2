<p id="notice"><%= notice %></p>

<h1>Songs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Duration</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= song.duration %></td>
        <td><%= link_to 'Show', artist_album_song_path(@artist, @album, song) %></td>
        <td><%= link_to 'Edit', edit_artist_album_song_path(@artist, @album, song) %></td>
        <td><%= link_to 'Delete', artist_album_song_path(@artist, @album, song), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song', new_artist_album_song_path %> |
